
<h2>Part {{ part }}</h2>
<p>
    <input id="part{{ part }}" type="text" value="{{ value }}" placeholder="Part {{ part }} not yet solved">
</p>
<button class="solve-action button button--yes" data-day="{{ day }}" data-part="{{ part }}" data-puzzle="{{ puzzle.id }}">Solve</button>
<button class="save-action button button--warn" data-day="{{ day }}" data-part="{{ part }}" data-puzzle="{{ puzzle.id }}">Save correct solution</button>
{% if value %}
    <button class="test-action button button--info" data-day="{{ day }}" data-part="{{ part }}" data-puzzle="{{ puzzle.id }}">Re-check solution</button>
{% endif %}
