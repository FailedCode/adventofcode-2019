{% extends 'base.html.twig' %}

{% block body %}
<div class="example-wrapper">
    <h1>Day {{ day }}</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <a href="{{ path('index') }}">back</a>

    {% if puzzleAvailable %}
        <a href="https://adventofcode.com/2019/day/{{ day }}">Puzzle description</a>
    {% endif %}

    {% if puzzle %}
        {{ include('web/partials/partSolution.html.twig', {value: puzzle.solution1, part: 1}) }}
        {{ include('web/partials/partSolution.html.twig', {value: puzzle.solution2, part: 2}) }}
    {% endif %}

</div>
{% endblock %}
