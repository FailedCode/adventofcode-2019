{% extends 'base.html.twig' %}

{% block body %}
<div class="example-wrapper">
    <h1>Day {{ day }}</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="flash-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <a href="{{ path('index') }}">back</a>
    <a href="https://adventofcode.com/2019/day/{{ day }}">Puzzle description</a>

    <p>
        {% if puzzle.solution1 %}
            {{ puzzle.solution1 }}
        {% else %}
            Part 1 not yet solved
        {% endif %}
    </p>

    <p>
        {% if puzzle.solution2 %}
            {{ puzzle.solution2 }}
        {% else %}
            Part 2 not yet solved
        {% endif %}
    </p>

    <p>{{ dateNow | date('Y-m-d-H-i') }}</p>
    <p>{{ datePuzzleEnabled | date('Y-m-d-H-i') }}</p>
    <p>{{ timeLeft }}</p>
</div>
{% endblock %}
